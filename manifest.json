{
	"manifest_version": 2,

	"name": "Phoenixify",
	"description": "A chrome extension to backup any input on a page.",
	"version": "0.0.1",

	"icons": {},

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"css": ["content.css"],
			"js": ["utils.js", "content-utils.js", "content.js"],
			"run_at": "document_end"
		}
	],

	"permissions": [
		"activeTab",
		"alarms",
		"storage"
	]
}
