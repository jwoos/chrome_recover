{
	"manifest_version": 2,

	"name": "FormSafe",
	"description": "A chrome extension to backup input data automatically.",
	"version": "0.0.1",

	"minimum_chrome_version": "40",

	"icons": {},

	"browser_action": {
		"default_icon": "assets/images/icon.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"css": ["style/content.css"],
			"js": ["scripts/vendor/underscore.js", "scripts/utils.js", "scripts/content.js"],
			"run_at": "document_end"
		}
	],

	"options_page": "options.html",

	"permissions": [
		"activeTab",
		"alarms",
		"storage"
	]
}
